{
	"extends": ["stylelint-config-standard"],
	"plugins": ["stylelint-order"],
	"ignoreFiles": ["out/**/*.css"],
	"rules": {
		"indentation": ["tab"],
		"color-hex-case": "upper",
		"selector-class-pattern": "^.*$",
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{
				"ignoreShorthands": ["/grid/"]
			}
		]
	}
}
